void eliminarRepetidos(ListaPos& lista){
	ListaPos::posicion posI = lista.getPrimera();
	ListaPos::posicion posJ = posI;
	for(int i = 0; i < lista.numElem(); ++i){
		bool repetido = false;
		for(int j = 0; j < lista.numElem(); ++j){
			if(i != j && lista.recuperar(posI) == lista.recuperar(posJ) ){
				repetido = true;
				j = lista.numElem();
			}
			posJ = lista.siguiente(posJ);
		}
		if(repetido){
			lista.borrar(posI);
		}
		posI = lista.siguiente(posI);
	}
}


int main(){
	ListaPos lista;
	lista.insertar(1,0);
	lista.insertar(2,1);
	lista.insertar(3,2);
	//lista.insertar(10,3);
	lista.insertar(3,3);
	lista.insertar(2,4);
	lista.insertar(1,5);
	//lista.insertar(1,7);
	lista.imprimir();
	burbujaOriginal(lista);
	lista.imprimir();
	eliminarRepetidos(lista);
	lista.imprimir();

	ListaPos lista2;
	lista2.insertar(1,0);
	lista2.insertar(2,1);
	lista2.insertar(3,2);
